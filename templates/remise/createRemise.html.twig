
{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Ajouter Remise</h5>

                    

                    <!-- General Form Elements -->
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                        <label for="inputText" class="col-sm-12 col-form-label">Remise</label>
                        <div class="col-sm-10">
                          

                  

                    <label for="inputText" class="col-sm-12 col-form-label">Libelle</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.libelle,{'attr':{'class':'form-control'}}) }}
                        </div>
                    {{ form_errors(f.libelle,{'attr':{'class':'text-danger'}}) }}

                     <label for="inputText" class="col-sm-12 col-form-label">Pourcentage</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.pourcentage,{'attr':{'class':'form-control'}}) }}
                        </div>
                    {{ form_errors(f.pourcentage,{'attr':{'class':'text-danger'}}) }}

                     <label for="inputText" class="col-sm-12 col-form-label">Ancien Prix</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.ancienPrix,{'attr':{'class':'form-control'}}) }}
                        </div>
                    {{ form_errors(f.ancienPrix,{'attr':{'class':'text-danger'}}) }}

                     <label for="inputText" class="col-sm-12 col-form-label">nouveau Prix</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.nouveauPrix,{'attr':{'class':'form-control'}}) }}
                        </div>
                    {{ form_errors(f.nouveauPrix,{'attr':{'class':'text-danger'}}) }}

                     




                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>


{% endblock %}