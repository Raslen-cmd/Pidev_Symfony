
{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Ajouter Commande</h5>

                    

                    <!-- General Form Elements -->
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                        <label for="inputText" class="col-sm-12 col-form-label">Commande</label>
                        <div class="col-sm-10">
                          



                    <label for="inputText" class="col-sm-12 col-form-label">Numero Commande</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.numcom,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.numcom,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-12 col-form-label">Observation</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.observation,{'attr':{'class':'form-control'}}) }}
                        </div>
                    {{ form_errors(f.observation,{'attr':{'class':'text-danger'}}) }}

                     <label for="inputText" class="col-sm-12 col-form-label">Id Client</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.id_client,{'attr':{'class':'form-control'}}) }}
                        </div>
                    {{ form_errors(f.id_client,{'attr':{'class':'text-danger'}}) }}

                     <label for="inputText" class="col-sm-12 col-form-label">Total</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.tht,{'attr':{'class':'form-control'}}) }}
                        </div>
                    {{ form_errors(f.tht,{'attr':{'class':'text-danger'}}) }}

                     <label for="inputText" class="col-sm-12 col-form-label">Total avec Tva</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.ttva,{'attr':{'class':'form-control'}}) }}
                        </div>
                    {{ form_errors(f.ttva,{'attr':{'class':'text-danger'}}) }}

                     <label for="inputText" class="col-sm-12 col-form-label">Toute taxes comprises</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.tttc,{'attr':{'class':'form-control'}}) }}
                        </div>
                    {{ form_errors(f.tttc,{'attr':{'class':'text-danger'}}) }}


                    <label for="inputText" class="col-sm-12 col-form-label">Date Commande</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.dateComm,{'attr':{'class':'form-control'}}) }}
                        </div>
                    {{ form_errors(f.dateComm,{'attr':{'class':'text-danger'}}) }}





                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>


{% endblock %}